@model eCommerce.Models.ChangePasswordViewModel

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="input-checkbox">
        <div class="caption">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" }) :
                <br />
                @Html.PasswordFor(m => m.OldPassword, new { @class = "col-md-2 input" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" }) :
                <br />
                @Html.PasswordFor(m => m.NewPassword, new { @class = "input" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" }) :
                <br />
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input" })
            </div>
            <input type="submit" value="Thay đổi mật khẩu" class="primary-btn order-submit" />
        </div>
    </div>
}