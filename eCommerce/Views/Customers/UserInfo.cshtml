
@{
	ViewBag.Title = "UserInfo";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model eCommerce.Models.UserInfoModel

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-12">
				<h3 class="breadcrumb-header">THANH TOÁN</h3>
				
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">

			@*<div class="col-md-7">
				
				<!-- Shiping Details -->
				
				<!-- /Shiping Details -->
				<!-- Order notes -->
				<div class="order-notes">
					<textarea class="input" placeholder="Ghi chú"></textarea>
				</div>
				<!-- /Order notes -->
			</div>*@
			
			<!-- Order Details -->
			<form class="col-md-offset-2 col-md-8 order-details" action="/Customers/Payment" method="post">
				<div class="section-title text-center">
					<h3 class="title">Đơn Hàng</h3>
				</div>
				@if(Model != null)
                {
                    <div class="order-summary">

					<div class="order-col">
						<div><strong>THÔNG TIN NHẬN HÀNG</strong></div>
						<div><strong></strong></div>
					</div>

                    <div class="shiping-details" style="margin-top:10px; margin-bottom:0">
                        <div class="input-checkbox">
                            <div class="caption">
                                <div class="form-group">
                                     @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "input", @placeholder = "Tên" }})
                                     @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                     @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Địa chỉ nhận hàng" } })
                                     @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                     @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Số điện thoại" } })
                                     @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    

					<div class="order-col">
						<div><strong>PHÍ SHIP</strong></div>
						<div>Free</div>
					</div>

					

					<div class="order-col">
						<div><strong>TỔNG TIỀN</strong></div>
						<div><strong class="order-total" style="font-size:14px;">@string.Format("{0:0,0}", Model.TotalAmount) VND</strong></div>
					</div>

					<div class="order-col">
						<div><strong>THÀNH TIỀN</strong></div>
						<div><strong class="order-total" style="font-size:14px;">@string.Format("{0:0,0}", Model.TotalAmount) VND</strong></div>
					</div>


				</div>

				<div class="payment-method">
					
					<label class="control-label">
                        PHƯƠNG THỨC THANH TOÁN
                    </label>
					<div class="input-radio">
						<input type="radio" name="payment" id="payment-2"  value="1">
						<label for="payment-2">
							<span></span>
							Thanh toán qua 123Pay
						</label>
						<div class="caption">
							<div class="form-group">
								<a>link qua 123Pay</a>
							</div>
						</div>

					</div>
					<div class="input-radio">
						<input type="radio" name="payment" id="payment-3" value="2" checked>
						<label for="payment-3">
							<span></span>
							Thanh toán khi nhận hàng
						</label>
					</div>
				</div>

				<div>
                    @Html.ValidationMessageFor(model => model.AgreePolicy, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.AgreePolicy)
					@*<input type="checkbox" name="AgreePolicy">*@
					<label>
						<span></span>
						Tôi đã đọc và đồng ý với <a href="#">chính sách & điều khoản</a>
					</label>
				</div>
				<button type="submit" class="primary-btn order-submit">Thanh Toán</button>
                }
			</form>
			<!-- /Order Details -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /SECTION -->
@section scripts{
       <!-- Validate Scripts-->
    <script src="/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
}