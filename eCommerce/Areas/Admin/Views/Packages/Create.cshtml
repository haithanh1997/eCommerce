@model eCommerce.EntityFramework.Package

@{
    ViewBag.Title = "Create";
}
<!-- Main content -->
@using (Html.BeginForm("Create", "Packages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header clear-fix">
                <h1>
                    Thêm gói bài đăng
                </h1>
            </section>

            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">Nhập thông tin gói bài đăng</h3>
                            </div>
                            <!-- /.box-header -->
                            <!-- form start -->
                            <div class="box-body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Times, htmlAttributes: new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Times, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Times, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.isDisabled, htmlAttributes: new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-10">
                                        @Html.CheckBoxFor(model => model.isDisabled, new { htmlAttributes = new { @class = "form-control", @checked = false } })
                                        @Html.ValidationMessageFor(model => model.isDisabled, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="box-footer">
                                    <div class="form-group">
                                        <a href="@Url.Action("Index","Packages")" class="btn btn-default"><i class="fa fa-reply"></i> Hủy</a>
                                        <button type="submit" class="btn btn-default bg-blue pull-right"><i class="fa fa-save"></i> Lưu</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <!-- /.box-body -->
    </div>
}
