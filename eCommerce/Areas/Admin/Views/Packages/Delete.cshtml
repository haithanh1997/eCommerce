@model eCommerce.EntityFramework.Package

@{
    ViewBag.Title = "Delete";
}

<div class="content-wrapper">
    <section class="content">
        <div class="box">
            <div>
                <div class="box-body">
                    <h3>Bạn có chắc chắn muốn xóa mục này ?</h3>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Times)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.isDisabled)
                                </th>
                                <th>
                                    Lựa chọn
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>
                                    @Html.DisplayFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayFor(model => model.Times)
                                </th>
                                <th>
                                    @if (Model.isDisabled)
                                    {
                                        <p>Đã hết bày bán</p>
                                    }
                                    else
                                    {
                                        <p>Đang bày bán</p>
                                    }
                                </th>
                                <th>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <a href="@Url.Action("Index","Categories")" class="btn btn-default"><i class="fa fa-reply"></i> Hủy</a>
                                            <input type="submit" value="Xóa" class="btn btn-danger" />
                                        </div>
                                    }
                                </th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
