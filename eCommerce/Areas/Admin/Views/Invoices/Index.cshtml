@model IEnumerable<eCommerce.EntityFramework.Invoice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h1>
			Sản phẩm bán trên website

		</h1>
		<ol class="breadcrumb">
			<li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
			<li><a href="#">Danh mục</a></li>
			<li class="active">Sản Phẩm</li>
		</ol>
	</section>
	<!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-xs-12">

				<!-- /.box -->
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">Danh sách sản phẩm</h3>
					</div>
					<!-- /.box-header -->
					<div class="box-body table-responsive">
						<table id="example1" class="table table-bordered table-striped">
							<thead>
								<tr>
									<th>
										@Html.DisplayNameFor(model => model.Id)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.User.UserName)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.Address)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.User.PhoneNumber)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.Total)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.PaymentMethod)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.DeliveryMethod)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.createdDate)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.Status)
									</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.isDisabled)
                                    </th>
									<th></th>
								</tr>
							</thead>
							<tbody>
									@foreach (var item in Model)
									{
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.PhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaymentMethod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DeliveryMethod)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.createdDate)
                                    </td>
                                    <td>
                                        @if (item.Status == eCommerce.EntityFramework.ProductStatus.NotValidated)
                                        {
                                            <p>Chưa xác nhận</p>
                                        }
                                        else if(item.Status == eCommerce.EntityFramework.ProductStatus.Processing)
                                        {
                                            <p>Đang xử lý</p>
                                        }
                                        else if(item.Status == eCommerce.EntityFramework.ProductStatus.Validated)
                                        {
                                            <p>Đã xác nhận</p>
                                        }
                                        else if (item.Status == eCommerce.EntityFramework.ProductStatus.Delivering)
                                        {
                                            <p>Đang giao</p>
                                        }
                                        else
                                        {
                                            <p>Đã giao xong</p>
                                        }
                                    </td>
                                    <td>
                                        @if(item.isDisabled == true)
                                        {
                                            <p>Hóa đơn đã ẩn</p>
                                        }
                                        else
                                        {
                                            <p>Hóa đơn không ẩn</p>
                                        }
                                    </td>

                                        <td>

                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
									}
							</tbody>
						</table>
					</div>
					<!-- /.box-body -->
				</div>
				<!-- /.box -->
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
	</section>
	<!-- /.content -->
</div>
