@model eCommerce.Areas.Admin.Models.ProductTypeModel

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header clear-fix">
            <h1>
                Thêm loại sản phẩm mới
            </h1>           
        </section>
        <!-- Main content -->

        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Nhập thông tin loại mới</h3>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })

                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.CategorySelectedId, htmlAttributes: new { @class = "control-label col-md-2" })

                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(model => Model.CategorySelectedId, Model.Categories, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CategorySelectedId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                              <!-- /.box-body -->
                            <div class="box-footer">
                                <a href="@Url.Action("Index","ProductTypes")"><button type="button" class="btn btn-default"><i class="fa fa-reply"></i> Hủy</button></a>
                                <button type="submit" class="btn btn-default bg-blue pull-right"><i class="fa fa-save"></i> Lưu</button>
                            </div>
                            <!-- /.box-footer -->
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}
