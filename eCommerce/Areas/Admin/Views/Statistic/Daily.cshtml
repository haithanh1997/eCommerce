@model IEnumerable<eCommerce.EntityFramework.Invoice>

@{
    ViewBag.Title = "Index";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header clear-fix">
        <h1>
            Quản lý doanh thu ngày
        </h1>
    </section>
    <!-- Main content -->

    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách hóa đơn đã thanh toán</h3>
                <hr />
                <h3 class="box-title" style="float:right">Tổng doanh thu hôm nay : @ViewBag.Total VNĐ</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.User)</th>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <th>@Html.DisplayNameFor(model => model.Total)</th>
                            <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
                            <th>@Html.DisplayNameFor(model => model.DeliveryMethod)</th>
                            <th>@Html.DisplayNameFor(model => model.TransactionId)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.createdDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total) VNĐ
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeliveryMethod)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TransactionId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.createdDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </section>

    <!-- /.content -->
</div>




