@model IEnumerable<eCommerce.EntityFramework.AdPackage>

@{
    ViewBag.Title = "Index";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header clear-fix">
        <h1>
            Quản lý gói quảng cáo
        </h1>
    </section>
    <!-- Main content -->

    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách gói quảng cáo</h3>
                <hr />
                <p>
                    @Html.ActionLink("Tạo mới", "Create")
                </p>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Price)</th>
                            <th>@Html.DisplayNameFor(model => model.AdType)</th>
                            <th>@Html.DisplayNameFor(model => model.Period)</th>
                            <th>@Html.DisplayNameFor(model => model.isDisabled)</th>
                            <th>Lựa chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price) VNĐ
                                </td>
                                <td>
                                    @if(item.AdType == eCommerce.EntityFramework.AdType.Encourage)
                                    {
                                        <p>Khuyến khích</p>
                                    }
                                    else if(item.AdType == eCommerce.EntityFramework.AdType.Hot)
                                    {
                                        <p>Bán chạy</p>
                                    }
                                    else if(item.AdType == eCommerce.EntityFramework.AdType.New)
                                    {
                                        <p>Sản phẩm mới</p>
                                    }
                                    else if(item.AdType == eCommerce.EntityFramework.AdType.SlideShow)
                                    {
                                        <p>SlideShow</p>
                                    }
                                    else if(item.AdType == eCommerce.EntityFramework.AdType.No)
                                    {
                                        <p>Không quảng cáo</p>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Period)
                                </td>
                                <td>
                                    @if(item.isDisabled)
                                    {
                                        <p>Đã hết bày bán</p>
                                    }
                                    else
                                    {
                                        <p>Đang bày bán</p>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </section>

    <!-- /.content -->
</div>




