@model IEnumerable<eCommerce.EntityFramework.AdPackage>

@{
	ViewBag.Title = "Ad";
	Layout = "~/Areas/Merchant/Views/Shared/_Layout-Merchants.cshtml";
}

<h2>Ad</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Price)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.AdType)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Period)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.isDisabled)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Price)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.AdType)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Period)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.isDisabled)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
				@Html.ActionLink("Details", "Details", new { id = item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.Id })
			</td>
		</tr>
	}

</table>

<link rel="stylesheet" href="~/Areas/Admin/Assets/dist/css/AdminLTE.css">
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header clear-fix">
		<h1>
			Gói bài đăng
		</h1>
	</section>
	<!-- Main content -->
	<section class="content">
		<div class="box" style="padding-left: 20px; padding-right: 20px">
			<div class="row">
				<div class="pricing-table">
					@foreach (var item in Model)
					{
						<div class="col-lg-4">
							<div class="plan">
								<h3>@Html.DisplayFor(modelItem => item.Name)<span>@Html.DisplayFor(modelItem => item.Price).000</span></h3>
								<a class="btn btn-lg btn-primary" href="@Url.Action("PurchasePackage","Package",new { id = item.Id })">Mua</a>
								<ul>
									<li><b>@Html.DisplayFor(modelItem => item.Times) lần</b> đăng bài</li>
									<li><b>@Html.DisplayFor(modelItem => item.Days) ngày</b> sản phẩm được đăng</li>
									<li><b>Miễn phí</b> nhận thông báo số lượng sản phẩm</li>
									<li><b>Rút tiền</b> khi đến giới hạn nhất định</li>
								</ul>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</section>
	<!-- /.content -->
</div>
