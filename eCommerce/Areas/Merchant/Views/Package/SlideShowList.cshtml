@model IEnumerable<eCommerce.EntityFramework.SlideShow>

@{
    ViewBag.Title = "SlideShowList";
    Layout = "~/Areas/Merchant/Views/Shared/_Layout-Merchants.cshtml";
}


<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
	<div class="row">
		<ol class="breadcrumb">
			<li>
				<a href="#">
					<em class="fa fa-home"></em>
				</a>
			</li>
			<li class="active">SlideShow</li>
		</ol>
	</div><!--/.row-->

	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Danh Sách</h1>
		</div>
	</div><!--/.row-->
	<div class="row">
		<div class="col-md-12">

			<div class="panel panel-blue">
				<div class="panel-heading">
					Bảng sản phẩm

					<span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
				</div>
				<div class="panel-body ">
					<div class="box">

						<!-- /.box-header -->
						<div class="box-body">
							<table id="example1" class="table table-bordered table-hover" style="color:black">
								<thead>
									<tr>
										<th>
											@Html.DisplayNameFor(model => model.Titled)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Summary)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Image)
										</th>
										
										<th>Tùy chọn</th>
									</tr>
								</thead>
								<tbody>

									@foreach (var item in Model)
									{
									<tr>
										<td>
											@Html.DisplayFor(modelItem => item.Titled)
										</td>

										<td>
											@Html.DisplayFor(modelItem => item.Summary)
										</td>

										<td>
											@Html.DisplayFor(modelItem => item.Image)
										</td>

							

										<td>
											@Html.ActionLink("Gỡ quảng cáo", "EditSlideShow", new { id = item.Id })

										</td>
									</tr>
									}
								</tbody>

							</table>
						</div>
						<!-- /.box-body -->
					</div>
				</div>


			</div>
		</div><!--/.col-->


	</div><!--/.row-->
</div>
