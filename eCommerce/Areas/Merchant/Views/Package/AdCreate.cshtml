@model IEnumerable<eCommerce.EntityFramework.Product>

@{
    ViewBag.Title = "AdCreate";
    Layout = "~/Areas/Merchant/Views/Shared/_Layout-Merchants.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
	<div class="row">
		<ol class="breadcrumb">
			<li>
				<a href="#">
					<em class="fa fa-home"></em>
				</a>
			</li>
			<li class="active">Quảng Cáo</li>
		</ol>
	</div><!--/.row-->

	<div class="row">
		<div class="col-lg-12">
			<h3 class="page-header">Danh Sách Sản Phẩm Chưa Có Quảng Cáo</h3>
		</div>
	</div><!--/.row-->
	<div class="row">
		<div class="col-md-12">

			<div class="panel panel-blue">
				<div class="panel-heading">
					Bảng sản phẩm

					<span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
				</div>
				<div class="panel-body ">
					<div class="box">

						<!-- /.box-header -->
						<div class="box-body">
							<table id="example1" class="table table-bordered table-hover" style="color:black">
								<thead>
									<tr>
										<th>
											@Html.DisplayNameFor(model => model.Image1)
										</th>

										<th>
											@Html.DisplayNameFor(model => model.Name)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Price)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Quantity)
										</th>


										<th>
											@Html.DisplayNameFor(model => model.updateDate)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.AdType)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.isDisabled)
										</th>
										<th>Tùy chọn</th>
									</tr>
								</thead>
								<tbody>

									@foreach (var item in Model)
									{
										<tr>
											<td>
												<img src="@Html.DisplayFor(modelItem => item.Image1)" width="50" height="50" />
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Name)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Price)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Quantity)
											</td>


											<td>
												@Html.DisplayFor(modelItem => item.updateDate)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.AdType)
											</td>
											<td>
												@if (item.isDisabled == true)
												{
													<p style="color:black;">Sắp hết hàng</p>
												}
												else
												{
													<p style="color:black;">Đang bày bán</p>
												}
											</td>
											<td>
												@Html.ActionLink("Quảng Cáo", "Create", new { id = item.Id ,ad = ViewBag.adtype, user = item.Store.User.Id })

											</td>
										</tr>
									}
								</tbody>

							</table>
						</div>
						<!-- /.box-body -->
					</div>
				</div>


			</div>
		</div><!--/.col-->


	</div><!--/.row-->
</div>
