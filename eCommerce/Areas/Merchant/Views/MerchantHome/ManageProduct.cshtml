@model IEnumerable<eCommerce.EntityFramework.Product>
@{
    ViewBag.Title = "ManageProduct";
    Layout = "~/Areas/Merchant/Views/Shared/_Layout-Merchants.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">Danh Sách Sản Phẩm</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh Sách Sản Phẩm</h1>
        </div>
    </div><!--/.row-->
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-blue">
                <div class="panel-heading">
                    Danh Sách Hóa Đơn Cần Xác Nhận

                    <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
                </div>
                <div class="panel-body ">
                    <div class="box">

                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-hover" style="color:black">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Image1)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Quantity)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.discountValue)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.updateDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AdType)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.isDisabled)
                                        </th>
                                        <th>Tùy chọn</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                               <img src="@Html.DisplayFor(modelItem => item.Image1)" width="50" height="50"/> 
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.discountValue)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.updateDate)
                                            </td>
                                            <td>
                                                @if (item.AdType == eCommerce.EntityFramework.AdType.Default)
                                                {
                                                    <p style="color:black;">Không</p>
                                                }
                                                else if (item.AdType == eCommerce.EntityFramework.AdType.Standard)
                                                {
                                                    <p style="color:black;">Tiêu chuẩn</p>
                                                }
                                                else
                                                {
                                                    <p style="color:black;">Thượng đẳng</p>
                                                }
                                            </td>
                                            <td>
                                                @if(item.isDisabled == true)
                                                {
                                                    <p style="color:black;">Sắp hết hàng</p>
                                                }
                                                else
                                                {
                                                    <p style="color:black;">Đang bày bán</p>
                                                }
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>


            </div>
        </div><!--/.col-->


    </div><!--/.row-->
</div>
